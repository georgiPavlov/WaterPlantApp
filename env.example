# Django Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/waterplantapp
# Alternative for SQLite (development only):
# DATABASE_URL=sqlite:///db.sqlite3

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Redis Configuration (for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# API Configuration
API_RATE_LIMIT=1000/hour
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# File Storage
DEFAULT_FILE_STORAGE=django.core.files.storage.FileSystemStorage
MEDIA_ROOT=media/
MEDIA_URL=/media/
STATIC_ROOT=staticfiles/
STATIC_URL=/static/

# AWS S3 Configuration (for production)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.com
# AWS_DEFAULT_ACL=public-read
# AWS_S3_OBJECT_PARAMETERS={'CacheControl': 'max-age=86400'}

# Monitoring
SENTRY_DSN=your-sentry-dsn-here

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/waterplantapp.log

# Device Communication
DEVICE_API_TIMEOUT=30
DEVICE_RETRY_ATTEMPTS=3
DEVICE_HEARTBEAT_INTERVAL=300

# Water Plant Specific Settings
DEFAULT_WATER_VOLUME=150
DEFAULT_MOISTURE_THRESHOLD=0.4
DEFAULT_CHECK_INTERVAL=30
MAX_WATER_VOLUME=2000
MIN_WATER_VOLUME=50

# Notification Settings
NOTIFICATION_EMAIL_ENABLED=True
NOTIFICATION_SMS_ENABLED=False
LOW_WATER_THRESHOLD=20
LOW_MOISTURE_THRESHOLD=30
